<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spjzweb.dao.ThreadingProcessDao">

    <insert id="addThreadingProcess" parameterType="com.spjzweb.entity.ThreadingProcess">
     INSERT INTO threading_process(process_no,couping_no,operator_no,inspection_time,visual_inspection,thread_tooth_pitch_diameter_max,thread_tooth_pitch_diameter_avg,thread_tooth_pitch_diameter_min,thread_sealing_surface_diameter_max,thread_sealing_surface_diameter_avg,thread_sealing_surface_diameter_min,thread_sealing_surface_ovality,thread_width,thread_pitch,thread_taper,thread_height,thread_length_min,thread_bearing_surface_width,couping_inner_end_depth,thread_hole_inner_diameter,couping_od,couping_length,thread_tooth_angle,thread_throug_hole_size,video_no,tool_measuring_record_no,inspection_result) VALUES (#{process_no},#{couping_no},#{operator_no},#{inspection_time},#{visual_inspection},#{thread_tooth_pitch_diameter_max},#{thread_tooth_pitch_diameter_avg},#{thread_tooth_pitch_diameter_min},#{thread_sealing_surface_diameter_max},#{thread_sealing_surface_diameter_avg},#{thread_sealing_surface_diameter_min},#{thread_sealing_surface_ovality},#{thread_width},#{thread_pitch},#{thread_taper},#{thread_height},#{thread_length_min},#{thread_bearing_surface_width},#{couping_inner_end_depth},#{thread_hole_inner_diameter},#{couping_od},#{couping_length},#{thread_tooth_angle},#{thread_throug_hole_size},#{video_no},#{tool_measuring_record_no},#{inspection_result})
    </insert>
    <delete id="delThreadingProcess">
        delete from threading_process WHERE
        <foreach collection="array" item="item" open="id in (" separator="," close=")">
           #{item}
        </foreach>
    </delete>
    <update id="updateThreadingProcess" parameterType="com.spjzweb.entity.ThreadingProcess">
      UPDATE threading_process set process_no=#{process_no},couping_no=#{couping_no},operator_no=#{operator_no},inspection_time=#{inspection_time},visual_inspection=#{visual_inspection},thread_tooth_pitch_diameter_max=#{thread_tooth_pitch_diameter_max},thread_tooth_pitch_diameter_avg=#{thread_tooth_pitch_diameter_avg},thread_tooth_pitch_diameter_min=#{thread_tooth_pitch_diameter_min},thread_sealing_surface_diameter_max=#{thread_sealing_surface_diameter_max},thread_sealing_surface_diameter_avg=#{thread_sealing_surface_diameter_avg},thread_sealing_surface_diameter_min=#{thread_sealing_surface_diameter_min},thread_sealing_surface_ovality=#{thread_sealing_surface_ovality},thread_width=#{thread_width},thread_pitch=#{thread_pitch},thread_taper=#{thread_taper},thread_height=#{thread_height},thread_length_min=#{thread_length_min},thread_bearing_surface_width=#{thread_bearing_surface_width},couping_inner_end_depth=#{couping_inner_end_depth},thread_hole_inner_diameter=#{thread_hole_inner_diameter},couping_od=#{couping_od},couping_length=#{couping_length},thread_tooth_angle=#{thread_tooth_angle},thread_throug_hole_size=#{thread_throug_hole_size},video_no=#{video_no},tool_measuring_record_no=#{tool_measuring_record_no},inspection_result=#{inspection_result} where id=#{id}
    </update>


    <select id="getCountAllByLike" resultType="int">
        select count(*) from threading_process o
        left JOIN  tool_measuring_record t on o.tool_measuring_record_no=t.tool_measuring_record_no
        <where>
            <if test="couping_no!=null and couping_no!=''">
                AND o.couping_no LIKE CONCAT('%',#{couping_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.inspection_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.inspection_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
    </select>



    <select id="getAllByLike" resultType="map">
        Select o.*,t.* from threading_process o
        left JOIN  tool_measuring_record t on o.tool_measuring_record_no=t.tool_measuring_record_no
        <where>
            <if test="couping_no!=null and couping_no!=''">
                AND o.couping_no LIKE CONCAT('%',#{couping_no},'%')
            </if>
            <if test="operator_no!=null and operator_no!=''">
                AND o.operator_no LIKE CONCAT('%',#{operator_no},'%')
            </if>
            <if test="begin_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.inspection_time,'%Y-%m-%d %H:%T:%s')>=DATE_FORMAT(#{begin_time},'%Y-%m-%d 00:00:00')]]>
            </if>
            <if test="end_time!=null">
                <![CDATA[ AND DATE_FORMAT(o.inspection_time,'%Y-%m-%d %H:%T:%s')<=DATE_FORMAT(#{end_time},'%Y-%m-%d 23:59:59')]]>
            </if>
        </where>
        ORDER BY o.id DESC
        limit #{skip},#{take}
    </select>
</mapper>